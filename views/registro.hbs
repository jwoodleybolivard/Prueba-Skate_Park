<h1>Skate Park</h1>

<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />


  <form method="POST" enctype="multipart/form-data" action="/registro">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm">
        <label>Email</label>
        <input class="form-control m-auto" id="email" name="email" maxlength="50" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" id="nombre" name="nombre" type="text" maxlength="25" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" class="form-control m-auto" id="password" name="password" maxlength="25" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" class="form-control m-auto" id="password_2" name="password_2" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input class="form-control m-auto" id="anos_experiencia" name="anos_experiencia" required />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" id="especialidad" name="especialidad" type="text" maxlength="50" required />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input type="file" id="foto" name="foto" required />
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>

  </form>
</div>
</div>